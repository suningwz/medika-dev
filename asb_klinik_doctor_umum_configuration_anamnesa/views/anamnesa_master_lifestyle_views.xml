<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="anamnesa_master_lifestyle_tree">
            <field name="name">anamnesa.master.tree</field>
            <field name="model">anamnesa.master</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="tipe_anamnesa" />
                    <field name="anamnesa_type" class="font-italic" />
                    <field name="nama" />
                    <field name="name" class="font-italic" />
                    <field name="form" />
                    <field name="lifestyle_form" attrs="{'required': [('form', '=', True)]}" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="anamnesa_master_lifestyle_form">
            <field name="name">anamnesa.master.form</field>
            <field name="model">anamnesa.master</field>
            <field name="arch" type="xml">
                <form>
                    <header></header>
                    <sheet>
                        <group>
                            <group>
                                <field name="tipe_anamnesa" required="1" force_save="1" readonly="1" />
                                <field name="anamnesa_type" class="font-italic" force_save="1" readonly="1" />
                                <field name="form" />
                                <field name="lifestyle_form" attrs="{'required': [('form', '=', True)], 'invisible': [('form', '!=', True)]}" />
                            </group>
                            <group>
                                <field name="nama" required="1" />
                                <field name="name" required="1" class="font-italic" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="anamnesa_master_lifestyle_action">
            <field name="name">Kebiasaan (Lifestyle)</field>
            <field name="res_model">anamnesa.master</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('tipe_anamnesa','=','kebiasaan')]</field>
            <field name="context">{'default_tipe_anamnesa': 'kebiasaan'}</field>
        </record>
        <record id="action_tree_lifestyle" model="ir.actions.act_window.view">
            <field name="sequence" eval="1" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="anamnesa_master_lifestyle_tree" />
            <field name="act_window_id" ref="anamnesa_master_lifestyle_action" />
        </record>
        <record id="action_form_lifestyle" model="ir.actions.act_window.view">
            <field name="sequence" eval="3" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="anamnesa_master_lifestyle_form" />
            <field name="act_window_id" ref="anamnesa_master_lifestyle_action" />
        </record>

    </data>
</odoo>