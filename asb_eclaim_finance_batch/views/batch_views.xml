        <record id="view_eclaim_batch_finance_filter" model="ir.ui.view">
            <field name="name">eclaim.batch.eclaim.finance</field>
            <field name="model">eclaim.batch</field>
            <field name="arch" type="xml">
                <search string="Search Finance">
                    <filter name="so_pr_pending" string="SO &amp; PR Pending" domain="['|','|', ('so_number', '=', False), ('pr_number', '=', False), ('so_pr_date', '=', False), ('state','=','approved')]" />
                    <filter name="ar_pending" string="AR Pending" domain="['|', ('ar_number', '=', False), ('ar_remarks', '=', False), ('state','=','approved')]" />
                    <filter name="po_pending" string="PO Pending" domain="['|', ('po_number', '=', False), ('po_remarks', '=', False), ('state','=','approved')]" />
                    <filter name="ap_pending" string="AP Pending" domain="['|', ('ap_number', '=', False), ('ap_remarks', '=', False), ('state','=','approved')]" />
                    <filter name="ap_pending_is_set" string="AP Pending is Set" domain="[('ap_number', '!=', False),('state','!=','paid')]" />
                    <group expand="1" string="Group By">
                        <filter string="Client Type" name="member" domain="[]" context="{'group_by': 'client_type'}"/>
                    </group>

                </search>
            </field>
        </record>

        <!-- Dashboard action button -->
        <record id="eclaim_batch_finance_dashboard_list" model="ir.actions.act_window">
            <field name="name">Finance Monitoring</field>
            <field name="res_model">eclaim.batch</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="eclaim_batch_finance_tree" />
            <field name="search_view_id" ref="view_eclaim_batch_finance_filter" />
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                No Finance Case to display
                </p>
            </field>
        </record>

        <!-- action tengah tree -->
        <record id="model_eclaim_batch_finance_action_archive" model="ir.actions.server">
            <field name="name">Paid</field>
            <field name="model_id" ref="asb_eclaim_batch.model_eclaim_batch" />
            <field name="binding_model_id" ref="asb_eclaim_batch.model_eclaim_batch" />
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = records.paid()</field>
        </record>

        <record model="ir.actions.act_window" id="eclaim_batch_finance_action">
            <field name="name">Finance Monitoring</field>
            <field name="res_model">eclaim.batch</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_member': True}</field>
            <field name="search_view_id" ref="view_eclaim_batch_finance_filter" />
            <field name="domain">[('state','=','approved')]</field>
        </record>
        <record id="action_tree_finance_batch" model="ir.actions.act_window.view">
            <field name="sequence" eval="1" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="eclaim_batch_finance_tree" />
            <field name="act_window_id" ref="eclaim_batch_finance_action" />
        </record>
        <record id="action_form_finance_batch" model="ir.actions.act_window.view">
            <field name="sequence" eval="2" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="asb_eclaim_batch.eclaim_batch_view_form" />
            <field name="act_window_id" ref="eclaim_batch_finance_action" />
        </record>
        <menuitem id="submenu_eclaim_batch_finance" sequence="4" name="Finance Monitoring" parent="asb_eclaim.menu_root" action="eclaim_batch_finance_action" />

    </data>
</odoo>