<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="eclaim_batch_finance_tree">
            <field name="name">eclaim.batch.finance.tree</field>
            <field name="model">eclaim.batch</field>
            <field name="arch" type="xml">
                <tree name='Finance Tree' default_order="finance_due_date desc" create="false" editable="bottom" js_class="eclaim_finance_list_dashboard" class="o_finance_column">
                    <field name="batch_number" readonly="1" />
                    <field name="client_id" readonly="1" />
                    <field name="provider_id" readonly="1" />
                    <field name="client_type" readonly="1" />
                    <field name="claim_type" readonly="1" />
                    <field name="finance_due_date" invisible="1"/>
                    <field name="finance_due_date_str" readonly="1" widget="badge" decoration-success="finance_due_date &lt; -30" decoration-warning="finance_due_date &gt; -30 and finance_due_date &lt; -5" decoration-danger="finance_due_date &gt; -5"/>
                    <field name="so_number" attrs="{'required': ['|',('so_pr_date','!=',False),('pr_number','!=',False)], 'readonly': [('state', '=', 'paid')]}" decoration-info='1' />
                    <field name="pr_number" attrs="{'required': ['|',('so_pr_date','!=',False),('so_number','!=',False)],'readonly': [('state', '=', 'paid')]}" decoration-info='1' />
                    <field name="so_pr_date" attrs="{'required': ['|',('pr_number','!=',False),('so_number','!=',False)],'readonly': [('state', '=', 'paid')]}" decoration-info='1' />
                    <field name="ar_number" attrs="{'required': [('ar_remarks','!=',False)], 'readonly': [('state', '=', 'paid')]}" decoration-danger='1' />
                    <field name="ar_remarks" attrs="{'required': [('ar_number','!=',False)], 'readonly': [('state', '=', 'paid')]}" decoration-danger='1' />
                    <field name="po_number" attrs="{'required': [('po_remarks','!=',False)],'readonly': [('state', '=', 'paid')]}" decoration-success='1' />
                    <field name="po_remarks" attrs="{'required': [('po_number','!=',False)],'readonly': [('state', '=', 'paid')]}" decoration-success='1' />
                    <field name="ap_number" attrs="{'required': [('ap_remarks','!=',False)],'readonly': [('state', '=', 'paid')]}" decoration-warning='1' />
                    <field name="ap_remarks" attrs="{'required': [('ap_number','!=',False)],'readonly': [('state', '=', 'paid')]}" decoration-warning='1' />
                    <button name="paid" attrs="{'invisible': [('state', '=', 'paid')]}" string="Paid" type="object" class="oe_highlight" />
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>

