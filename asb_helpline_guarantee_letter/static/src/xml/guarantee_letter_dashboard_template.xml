<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="asb_helpline_guarantee_letter.GuaranteeLetterDashboard">
        <div class="o_guarantee_letter_dashboard container">
            <div class="row">
                <div class="col-sm-4">
                    <table class="table table-borderless o_main o_dashboard_action" title="Maternity/Rawat Inap" name="asb_helpline_guarantee_letter.guarantee_letter_dashboard" context='{"search_default_ip_maternity_case": true}' style="box-shadow: 0 2px 5px 0 rgb(0 0 0 / 50%), 0 2px 10px 0 rgb(0 0 0 / 12%);">
                        <tbody>
                            <tr>
                                <td>
                                    <img src='/asb_helpline_guarantee_letter/static/src/img/bed.png' style="width: 100%;" />
                                </td>
                                <td class="o_remarks">
                                    <span>Maternity/Rawat Inap</span>
                                    <br />
                                    <span>
                                        <t t-esc="values['total_maternity']" />
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-4">
                    <table class="table table-borderless o_main o_dashboard_action" title="Need Follow Up" name="asb_helpline_guarantee_letter.guarantee_letter_dashboard" context='{"search_default_need_follow_up": true}' style="box-shadow: 0 2px 5px 0 rgb(0 0 0 / 50%), 0 2px 10px 0 rgb(0 0 0 / 12%);">
                        <tbody>
                            <tr>
                                <td>
                                    <img src='/asb_helpline_guarantee_letter/static/src/img/phone-volume.png' style="width: 100%;" />
                                </td>
                                <td class="o_remarks">
                                    <span>Need Follow Up</span>
                                    <br />
                                    <span>
                                        <t t-esc="values['total_need_follow_up']" />
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-4">
                    <table class="table table-borderless o_main o_dashboard_action" title="Followed Up" name="asb_helpline_guarantee_letter.guarantee_letter_dashboard" context='{"search_default_followed_up": true}' style="box-shadow: 0 2px 5px 0 rgb(0 0 0 / 50%), 0 2px 10px 0 rgb(0 0 0 / 12%);">
                        <tbody>
                            <tr>
                                <td>
                                    <img src='/asb_helpline_guarantee_letter/static/src/img/calendar-check.png' style="width: 100%;" />
                                </td>
                                <td class="o_remarks">
                                    <span>Followed Up</span>
                                    <br />
                                    <span>
                                        <t t-esc="values['total_followed_up']" />
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</templates>